<Window x:Class="PreTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Name="win_Main" Title="MainWindow" Height="32"  Width="200" WindowStyle="None" ResizeMode="NoResize" Topmost="True" Top="0" Left="32">
    <Grid UseLayoutRounding="True">
        <Grid>
            <WrapPanel>
                <TextBlock x:Name="tb_time" FontSize="24" Width="72" Padding="0 4 0 4" FontFamily="Arial" TextAlignment="Center" Text="00:00"/>
                <Button x:Name="btu_Run" FontSize="16" Width="32" Height="32" Click="Btu_Run_Click" Content="&#xE102;" FontFamily="Segoe UI Symbol"/>
                <Button x:Name="btu_Stop" FontSize="16" Width="32" Height="32" Click="Btu_Stop_Click"  Content="&#xE004;" FontFamily="Segoe UI Symbol"/>
                <Button x:Name="btu_setting" FontSize="16" Width="32" Height="32" Click="Btu_setting_Click"  Content="&#xE115;" FontFamily="Segoe UI Symbol"/>
                <Button x:Name="btu_exit" FontSize="10" Width="32" Height="32" Click="btu_exit_Click" Content="Exit"/>
            </WrapPanel>

        </Grid>

    </Grid>

</Window>
