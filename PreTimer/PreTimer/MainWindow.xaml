<Window x:Class="PreTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Name="win_Main" Title="MainWindow" Height="32"  Width="200" WindowStyle="None" ResizeMode="NoResize" Topmost="True" Top="0" Left="32" Background="#FF2D2D30" ShowInTaskbar="False">
    <Window.Resources>
        <Style BasedOn="{StaticResource btu_style}" TargetType="{x:Type Button}" x:Key="btu_style_sp">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#FF3e3e40"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#FF2d2d30"/>
                                <Setter TargetName="border" Property="TextElement.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#FF1d1f20"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#FF2d2d30"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid UseLayoutRounding="True">
        <Grid>
            <WrapPanel>
                <TextBlock x:Name="tb_time" FontSize="24" Width="72" Padding="0 4 0 4" FontFamily="Arial" TextAlignment="Center" Text="00:00" Foreground="#FFFFFFFF"/>
                <Button x:Name="btu_Run" Style="{DynamicResource btu_style}" FontSize="14" Width="32" Height="32" Click="Btu_Run_Click" Content="&#xE102;" FontFamily="Segoe UI Symbol" Foreground="#FF00cc6a"/>
                <Button x:Name="btu_Stop" Style="{DynamicResource btu_style}" FontSize="14" Width="32" Height="32" Click="Btu_Stop_Click"  Content="&#xE004;" FontFamily="Segoe UI Symbol" Foreground="#FFe74856"/>
                <Button x:Name="btu_setting" Style="{DynamicResource btu_style_sp}" FontSize="14" Width="32" Height="32" Click="Btu_setting_Click"  Content="&#xE115;" FontFamily="Segoe UI Symbol" Foreground="#FFbdbdbd"/>
                <Button x:Name="btu_exit" Style="{DynamicResource btu_style_sp}" FontSize="14" Width="32" Height="32" Click="Btu_exit_Click" Content="&#xE21C;" Foreground="#FFbdbdbd" FontFamily="Segoe UI Symbol"/>
            </WrapPanel>

        </Grid>

    </Grid>

</Window>
